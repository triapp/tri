<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false">

    <TextView
        android:paddingLeft="3dp"
        android:id="@+id/lblListItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="nilbjkbkbbk b,nbbkjbkj,bj. ,njk"
        android:textSize="14dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"

        android:layout_below="@+id/dateTimeHall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_toStartOf="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:focusable="false"

        android:clickable="false"
        android:gravity="center_vertical"
        android:layout_below="@+id/dateTimeHall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:visibility="visible"
        android:buttonTint="@color/abc_search_url_text_normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:textSize="11dip"
        android:text="Small Text"
        android:id="@+id/speakerOrInfo"
        android:layout_below="@+id/lblListItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_toLeftOf="@+id/checkBox"
        android:paddingLeft="3dp"/>

    <TextView
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date - Time - hall"
        android:id="@+id/dateTimeHall"
        android:textSize="11dip"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>