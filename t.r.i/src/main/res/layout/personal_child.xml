<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nameOfPersonalPresentation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="nilbjkbkbbk b,nbbkjbkj,bj. ,njk"
        android:textSize="14dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toStartOf="@+id/delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:textSize="10dip"
        android:text="Small Text"
        android:id="@+id/personalPresentationInfo"
        android:textStyle="italic"
        android:layout_below="@+id/nameOfPersonalPresentation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toStartOf="@+id/delete" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7dip"
        android:text="Del"
        android:id="@+id/delete"
        android:layout_above="@+id/speakerOrInfo"
        android:layout_alignBottom="@+id/lblListItem"
        android:layout_toRightOf="@+id/lblListItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>